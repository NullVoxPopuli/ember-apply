{
  "private": true,
  "workspaces": [
    "packages/*",
    "packages/ember/*"
  ],
  "license": "MIT",
  "author": "NullVoxPopuli",
  "scripts": {
    "publish:release": "turbo run publish",
    "publish:dry-run": "turbo run publish:dry-run",
    "test": "turbo run test",
    "lint:fix": "turbo run lint:fix",
    "lint": "turbo run lint"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.0.2",
    "@commitlint/config-conventional": "^16.0.0",
    "turbo": "^1.0.26"
  },
  "turbo": {
    "baseBranch": "origin/main",
    "pipeline": {
      "dev": {
        "dependsOn": [
          "^dev"
        ]
      },
      "start": {
        "dependsOn": [
          "^build"
        ],
        "cache": false
      },
      "build": {
        "dependsOn": [
          "^build"
        ]
      },
      "lint": {
        "dependsOn": [
          "^lint:js"
        ]
      },
      "lint:fix": {},
      "lint:js": {},
      "test": {},
      "publish": {},
      "publish:dry-run": {}
    }
  },
  "volta": {
    "node": "16.13.2",
    "yarn": "1.22.17"
  }
}
