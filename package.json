{
  "private": true,
  "workspaces": [
    "ember-apply",
    "packages/*",
    "packages/ember/*"
  ],
  "license": "MIT",
  "author": "NullVoxPopuli",
  "scripts": {
    "build:docs": "yarn workspace docs docs:collect",
    "start:docs": "yarn build:docs --watch",
    "publish:release": "multi-semantic-release --ignore-private-packages",
    "publish:dry-run": "yarn publish:release --dry-run --debug",
    "test": "turbo run test",
    "lint:fix": "turbo run lint:fix",
    "lint": "turbo run lint"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.0.2",
    "@commitlint/config-conventional": "^16.0.0",
    "@semantic-release/changelog": "^6.0.0",
    "@semantic-release/git": "^10.0.0",
    "multi-semantic-release": "^2.11.0",
    "semantic-release": "^19.0.0",
    "semantic-release-monorepo": "^7.0.0",
    "turbo": "1.0.28"
  },
  "release": {
    "extends": "semantic-release-monorepo",
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/github",
      "@semantic-release/git"
    ],
    "monorepo": {
      "analyzeCommits": [
        "@semantic-release/commit-analyzer"
      ],
      "generateNotes": [
        "@semantic-release/release-notes-generator"
      ]
    }
  },
  "turbo": {
    "baseBranch": "origin/main",
    "pipeline": {
      "dev": {
        "dependsOn": [
          "^dev"
        ]
      },
      "start": {
        "dependsOn": [
          "^build"
        ],
        "cache": false
      },
      "build": {
        "dependsOn": [
          "^build"
        ]
      },
      "lint": {
        "dependsOn": [
          "^lint:js"
        ]
      },
      "lint:fix": {},
      "lint:js": {},
      "test": {},
      "publish": {},
      "publish:dry-run": {}
    }
  },
  "volta": {
    "node": "16.13.2",
    "yarn": "1.22.17"
  }
}
